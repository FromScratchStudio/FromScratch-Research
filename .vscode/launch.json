{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FSS Audio Playlist (Edge)",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}/FSS-audioplaylist-component",
            "preLaunchTask": "FSS Audio Playlist: Dev Server"
        },
        {
            "name": "FSS Audio Playlist (Chrome)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}/FSS-audioplaylist-component",
            "preLaunchTask": "FSS Audio Playlist: Dev Server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Lancer le programme",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}
